
<div id="login_box">

	<h2>M'enregistrer</h2>

	<div class="login_form well">
	
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>

		  <div><%= f.label :name %><br />
		  <%= f.text_field :name, :class => "form-control", :autofocus => true %></div>

		  <div><%= f.label :email %><br />
		  <%= f.email_field :email, :class => "form-control", :autofocus => true %></div>

		  <div><%= f.label :password %><br />
		  <%= f.password_field :password, :class => "form-control" %></div>

		  <div><%= f.label :password_confirmation %><br />
		  <%= f.password_field :password_confirmation, :class => "form-control" %></div>

		</br>

		  <div><%= f.submit "M'enregistrer" %></div>
		<% end %>


	</div>
</div>		



